<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Outbox</title>
    <%- include('includes/head.ejs') %>
    <link rel="stylesheet" href="/css/style.css" />
    <link rel="stylesheet" href="/css/outbox.css" />
  </head>
  <body>
    <%- include('includes/header.ejs') %>

    <div class="container">
      <h1>Outbox Page</h1>
      <table>
        <thead>
          <tr>
            <th>Status</th>
            <th>Recipient</th>
            <th>Subject</th>
            <th>Date</th>
          </tr>
        </thead>
        <tbody>
          <!-- Generating 8 rows -->
          <% data.forEach(each_data => { %>
          <tr>
            <td><input type="checkbox" /></td>
            <td><%= each_data.username %></td>
            <td><%= each_data.subject %></td>
            <td><%= each_data.date %></td>
          </tr>

          <% }); %>
        </tbody>
      </table>

      <div class="navigation_inbox_page">
        <div class="box">
          <i class="fa-solid fa-caret-left"></i>
        </div>
        <div class="box">1</div>
        <div class="box">2</div>
        <div class="box">3</div>
        <div class="box">4</div>
        <div class="box">5</div>
        <div class="box">6</div>
        <div class="box">
          <i class="fa-solid fa-caret-right"></i>
        </div>
      </div>
    </div>
  </body>
</html>
